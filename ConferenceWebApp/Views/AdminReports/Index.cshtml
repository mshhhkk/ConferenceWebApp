@model AdminFilteredReportsListDTO
@{
    ViewData["Title"] = "Управление докладами";
}

<h2>Управление докладами</h2>

<form method="get" asp-action="Index">
    <input type="text" name="search" value="@Model.SearchQuery" placeholder="Поиск по ФИО" class="form-control w-25 d-inline-block" />
    <button type="submit" class="btn btn-primary">Поиск</button>
</form>

<hr />

<h3>Ожидают одобрения</h3>

@if (!Model.PendingReports.Any())
{
    <p>Нет докладов, ожидающих одобрения.</p>
}
else
{
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>ФИО</th>
                <th>Email</th>
                <th>Тема</th>
                <th>Файл</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var report in Model.PendingReports)
            {
                <tr>
                    <td>@report.AuthorFullName</td>
                    <td>@report.AuthorEmail</td>
                    <td>@report.Title</td>
                    <td>
                        @if (!string.IsNullOrEmpty(report.FilePath))
                        {
                            <a asp-action="Download" asp-route-id="@report.ReportId" class="btn btn-sm btn-secondary">Скачать</a>
                        }
                    </td>
                    <td>
                        <form asp-action="Approve" method="post" class="d-inline">
                            <input type="hidden" name="id" value="@report.ReportId" />
                            <input type="hidden" name="confirm" value="true" />
                            <button type="submit" class="btn btn-success btn-sm">Одобрить</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<hr />

<h3>Одобренные доклады</h3>

@if (!Model.ApprovedReports.Any())
{
    <p>Нет одобренных докладов.</p>
}
else
{
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>ФИО</th>
                <th>Email</th>
                <th>Тема</th>
                <th>Файл</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var report in Model.ApprovedReports)
            {
                <tr>
                    <td>@report.AuthorFullName</td>
                    <td>@report.AuthorEmail</td>
                    <td>@report.Title</td>
                    <td>
                        @if (!string.IsNullOrEmpty(report.FilePath))
                        {
                            <a asp-action="Download" asp-route-id="@report.ReportId" class="btn btn-sm btn-secondary">Скачать</a>
                        }
                    </td>
                    <td>
                        <form asp-action="Rollback" method="post" class="d-inline">
                            <input type="hidden" name="id" value="@report.ReportId" />
                            <input type="hidden" name="confirm" value="true" />
                            <button type="submit" class="btn btn-warning btn-sm">Откатить</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
