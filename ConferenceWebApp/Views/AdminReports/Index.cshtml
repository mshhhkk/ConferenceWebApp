@model AdminFilteredReportsListDTO

@{
    Layout = "_AdminLayout";
}

<h2 class="settings-title">Управление докладами</h2>

<form method="get" asp-action="Index" class="mb-4">
    <input type="text" name="search" value="@Model.SearchQuery" placeholder="Поиск по ФИО" class="settings-form-input w-25 d-inline-block" />
    <button type="submit" class="settings-save-btn">Поиск</button>
</form>

<hr />

<h3 class="settings-title">Ожидают одобрения</h3>
@if (!Model.PendingReports.Any())
{
    <p>Нет докладов, ожидающих одобрения.</p>
}
else
{
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>ФИО</th>
                <th>Email</th>
                <th>Тема</th>
                <th>Файл</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var report in Model.PendingReports)
            {
                <tr>
                    <td>@report.AuthorFullName</td>
                    <td>@report.AuthorEmail</td>
                    <td>@report.Title</td>
                    <td>
                        @if (!string.IsNullOrEmpty(report.FilePath))
                        {
                            <a asp-action="Download" asp-route-id="@report.ReportId" class="settings-photo-btn">Скачать</a>
                        }
                    </td>
                    <td>
                        <form asp-action="Approve" method="post" class="d-inline">
                            <input type="hidden" name="id" value="@report.ReportId" />
                            <input type="hidden" name="confirm" value="true" />
                            <button type="submit" class="settings-photo-btn settings-photo-btn-approve">Одобрить</button>
                        </form>
                        <a href="@Url.Action("Reject", "AdminReports", new { id = report.ReportId })" class="settings-photo-btn settings-photo-btn-warning">Отклонить</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

