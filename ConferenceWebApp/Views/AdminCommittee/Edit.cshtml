@model ConferenceWebApp.Application.DTOs.Admin.AdminCommitteeDTO

<h1>Редактировать члена комитета</h1>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="FullName"></label>
        <input asp-for="FullName" class="form-control" />
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Photo">Загрузить фотографию</label>
        <input type="file" name="Photo" class="form-control" />
    </div>
    <div class="form-group form-check">
        <input asp-for="IsHead" class="form-check-input" type="checkbox" />
        <label asp-for="IsHead" class="form-check-label">Председатель комитета</label>
    </div>
    <button type="submit" class="btn btn-primary">Добавить</button>
</form>

