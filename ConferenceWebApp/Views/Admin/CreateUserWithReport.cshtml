@model ConferenceWebApp.Application.DTOs.Admin.CreateUserWithReportViewModel

@{
    Layout = "_AdminLayout";
}

<h2>Добавить пользователя и его доклад</h2>

<form asp-action="CreateUserWithReport" method="post" enctype="multipart/form-data">
    <h3>Информация о пользователе</h3>

    <div class="settings-form-row">
        <div class="settings-form-group">
            <label asp-for="Email" class="settings-form-label">Email</label>
            <input asp-for="Email" class="settings-form-input" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="UserProfile.FirstName">Имя</label>
        <input asp-for="UserProfile.FirstName" class="form-control" />
        <span asp-validation-for="UserProfile.FirstName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="UserProfile.LastName">Фамилия</label>
        <input asp-for="UserProfile.LastName" class="form-control" />
        <span asp-validation-for="UserProfile.LastName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="UserProfile.MiddleName">Отчество</label>
        <input asp-for="UserProfile.MiddleName" class="form-control" />
        <span asp-validation-for="UserProfile.MiddleName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="UserProfile.Organization">Организация</label>
        <input asp-for="UserProfile.Organization" class="form-control" />
        <span asp-validation-for="UserProfile.Organization" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="UserProfile.PhoneNumber">Телефон</label>
        <input asp-for="UserProfile.PhoneNumber" class="form-control" />
        <span asp-validation-for="UserProfile.PhoneNumber" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="UserProfile.BirthDate">Дата рождения</label>
        <input asp-for="UserProfile.BirthDate" type="date" class="form-control" />
        <span asp-validation-for="UserProfile.BirthDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="UserProfile.Specialization">Специализация</label>
        <input asp-for="UserProfile.Specialization" class="form-control" />
        <span asp-validation-for="UserProfile.Specialization" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="UserProfile.Photo">Фотография</label>
        <input type="file" asp-for="UserProfile.Photo" class="form-control" />
        <span asp-validation-for="UserProfile.Photo" class="text-danger"></span>
    </div>

    <div class="settings-form-row">
        <div class="settings-form-group">
            <label asp-for="UserProfile.Position" class="settings-form-label">Должность</label>
            <select asp-for="UserProfile.Position" class="settings-form-input" asp-items="Html.GetEnumSelectList<ConferenceWebApp.Domain.Enums.Position>()">
                <option value="">-- Выберите должность --</option>
            </select>
            <span asp-validation-for="UserProfile.Position" class="text-danger"></span>
        </div>

        <div class="settings-form-group">
            <label asp-for="UserProfile.Degree" class="settings-form-label">Научная степень</label>
            <select asp-for="UserProfile.Degree" class="settings-form-input" asp-items="Html.GetEnumSelectList<ConferenceWebApp.Domain.Enums.ScientificDegree>()">
                <option value="">-- Выберите степень --</option>
            </select>
            <span asp-validation-for="UserProfile.Degree" class="text-danger"></span>
        </div>
    </div>

    <hr />

    <h3>Доклад</h3>

    <div class="form-group">
        <label asp-for="Report.ReportTheme">Тема доклада</label>
        <input asp-for="Report.ReportTheme" class="form-control" />
        <span asp-validation-for="Report.ReportTheme" class="text-danger"></span>
    </div>

    <div class="add-thesis-row">
        <div class="add-thesis-col">
            <label asp-for="Report.Section" class="add-thesis-label">Тема секции</label>
            <select asp-for="Report.Section" asp-items="Html.GetEnumSelectList<SectionTopic>()" class="add-thesis-select">
                <option value="">Выбрать</option>
            </select>
            <span asp-validation-for="Report.Section" class="text-danger"></span>
        </div>
        <div class="add-thesis-col">
            <label asp-for="Report.WorkType" class="add-thesis-label">Характер работы</label>
            <select asp-for="Report.WorkType" asp-items="Html.GetEnumSelectList<WorkType>()" class="add-thesis-select">
                <option value="">Выбрать</option>
            </select>
            <span asp-validation-for="Report.WorkType" class="text-danger"></span>
        </div>
    </div>
  
    <div class="form-group">
        <label asp-for="Report.File">Файл доклада</label>
        <input type="file" asp-for="Report.File" class="form-control" />
        <span asp-validation-for="Report.File" class="text-danger"></span>
    </div>
  

    <button type="submit" class="btn btn-primary mt-3">Добавить пользователя и доклад</button>
</form>
