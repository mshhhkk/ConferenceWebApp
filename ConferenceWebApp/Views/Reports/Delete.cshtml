@model ConferenceWebApp.Application.DTOs.ReportsDTOs.ReportDTO

@{
    ViewData["Title"] = "Подтверждение удаления отчета";
}

<h2>Подтверждение удаления отчета</h2>

<h4>Вы уверены, что хотите удалить этот отчет?</h4>
<div>
    <h5>Тема отчета: @Model.ReportTheme</h5>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Section)
        </dt>
        <dd class="col-sm-10">
            @Model.Section
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.WorkType)
        </dt>
        <dd class="col-sm-10">
            @Model.WorkType
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UploadedAt)
        </dt>
        <dd class="col-sm-10">
            @Model.UploadedAt.ToString("dd.MM.yyyy HH:mm")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LastUpdatedAt)
        </dt>
        <dd class="col-sm-10">
            @Model.LastUpdatedAt.ToString("dd.MM.yyyy HH:mm")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsApproved)
        </dt>
        <dd class="col-sm-10">
            @(Model.IsApproved ? "Утвержден" : "Ожидает")
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Удалить</button>
        <a asp-action="Index" asp-controller="PersonalAccount" class="btn btn-secondary">Отмена</a>
    </form>
</div>