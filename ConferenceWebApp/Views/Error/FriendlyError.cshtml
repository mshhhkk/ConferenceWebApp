@model ConferenceWebApp.Models.ErrorViewModel
@{
    Layout = "_Layout"; 
    ViewData["Title"] = Model?.Title ?? "Ошибка";
}

<link rel="stylesheet" href="~/css/global.css" />
<link rel="stylesheet" href="~/css/error.css" />

<div class="error-wrapper">
    <div class="error-card">
        <div class="error-icon"><i class="bi bi-exclamation-triangle-fill"></i></div>
        <h1 class="error-title">@Model?.Title</h1>
        <p class="error-text">@Model?.Message</p>
        <div class="error-actions">
            <a asp-controller="Home" asp-action="Index" class="add-thesis-btn">На главную</a>
            <button type="button" class="add-thesis-btn" onclick="history.back()">Назад</button>
        </div>
    </div>
</div>

