@model List<ConferenceWebApp.Application.DTOs.Admin.UserWithReceiptDTO>

@{
    Layout = "_AdminLayout";
}

<h2 class="settings-title">Пользователи с загруженными квитанциями</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">@TempData["Message"]</div>
}

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ФИО</th>
            <th>Email</th>
            <th>Квитанция</th>
            <th>Статус оплаты</th>
            <th>Действие</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FullName</td>
                <td>@user.Email</td>
                <td>
                    @if (!string.IsNullOrEmpty(user.ReceiptFilePath))
                    {
                        <a href="@Url.Content(user.ReceiptFilePath)" target="_blank" class="settings-photo-btn">Открыть</a>
                    }
                    else
                    {
                        <span>Не загружено</span>
                    }
                </td>
                <td>
                    @if (user.HasPaid)
                    {
                        <span class="text-success">Оплачено</span>
                    }
                    else
                    {
                        <span class="text-warning">Не оплачено</span>
                    }
                </td>
                <td>
                    @if (!user.HasPaid)
                    {
                        <form asp-action="MarkAsPaid" asp-route-userId="@user.UserId" method="post" style="display:inline;">
                            <button type="submit" class="settings-photo-btn">Подтвердить оплату</button>
                        </form>
                    }
                    else
                    {
                        <span>—</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
