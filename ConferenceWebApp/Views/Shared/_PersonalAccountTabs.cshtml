@{
    var controller = ViewContext.RouteData.Values["controller"]?.ToString() ?? "";
    var action = ViewContext.RouteData.Values["action"]?.ToString() ?? "";
    string selected = "";

    if (controller == "Reports" && action == "Index") selected = "Thesis";
    else if (controller == "ExtendedThesis") selected = "ExtendedThesis";
    else if (controller == "Payment") selected = "Payment";
    else if (controller == "ReportsTransfer" || controller == "ReportsRefferal") selected = "ReportsTransfer";
    // Добавьте другие условия при необходимости
}
<div class="section-tabs">
    <a href="/Reports/Index" class="section-tab-btn @(selected == "Thesis" ? "selected" : "")">Тезисы</a>
    <a href="/ExtendedThesis/Index" class="section-tab-btn @(selected == "ExtendedThesis" ? "selected" : "")">Расширенные тезисы</a>
    <a href="/Payment/Index" class="section-tab-btn @(selected == "Payment" ? "selected" : "")">Оплата</a>
    <a href="/ReportsRefferal/Index" class="section-tab-btn @(selected == "ReportsTransfer" ? "selected" : "")">Передача докладов</a>
</div>


