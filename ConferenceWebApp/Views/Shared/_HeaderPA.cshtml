@using ConferenceWebApp.Application.DTOs.AuthDTOs
@{
    var authRoles = (AuthStatusDTO)ViewData["AuthStatus"];
}
<link rel="stylesheet" href="~/css/header.css" />
<link href="https://fonts.googleapis.com/css2?family=Anton:wght@400&display=swap" rel="stylesheet">
<header class="header-bar personal-account-header">
    <div class="header-flex">
        <div class="header-left">
            <a href="/Home" class="header-logo">
                <img src="/images/Logo_header.svg" alt="Логотип">
                <span class="header-logo-text">CONFERENCE 2025</span>
            </a>
        </div>
        <div class="header-user-block">
            <div class="header-user" id="profileTrigger">
                <img src="/images/user.svg" alt="Пользователь" class="header-user-avatar" />
                @if (authRoles != null && !string.IsNullOrWhiteSpace(authRoles.UserName))
                {
                    <span class="header-user-name">@authRoles.UserName</span>
                }
            </div>
            <div class="profile-modal" id="profileModal">
                <div class="profile-modal-list">
                    <a href="/Reports" class="profile-modal-item">
                        <img src="/images/profile_icon.svg" class="profile-modal-icon" alt="" />
                        Личный кабинет
                    </a>
                    <a href="/PersonalAccount/Edit" class="profile-modal-item">
                        <img src="/images/profile_icon.svg" class="profile-modal-icon" alt="" />
                        Настройки
                    </a>
                </div>
                <form method="post" action="/Auth/Logout">
                    <button type="submit" class="profile-modal-exit">
                        Выход
                        <svg width="18" height="18" viewBox="0 0 24 24" style="vertical-align:middle;margin-left:6px;">
                            <path fill="#fff" d="M16 13v-2H7V8l-5 4 5 4v-3zM20 3h-8v2h8v14h-8v2h8c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2z" />
                        </svg>
                    </button>
                </form>
            </div>
        </div>

    </div>
</header>
@if (authRoles != null && !string.IsNullOrWhiteSpace(authRoles.UserName))
{
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const trigger = document.getElementById('profileTrigger');
            const modal = document.getElementById('profileModal');
            let modalTimeout;

            function showModal() {
                clearTimeout(modalTimeout);
                modal.style.display = 'block';
            }
            function hideModal() {
                modalTimeout = setTimeout(() => {
                    modal.style.display = 'none';
                }, 120);
            }

            trigger.addEventListener('mouseenter', showModal);
            trigger.addEventListener('mouseleave', hideModal);
            modal.addEventListener('mouseenter', showModal);
            modal.addEventListener('mouseleave', hideModal);
        });
    </script>
}

