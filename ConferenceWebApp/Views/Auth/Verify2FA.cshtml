@{
    ViewData["Title"] = "Подтверждение входа";
    Layout = "_AuthLayout";
}
<link rel="stylesheet" href="~/css/global.css" />
<link rel="stylesheet" href="~/css/auth.css" />

<div class="auth-page">
    <div class="auth-container">
        <div class="auth-left">
            <div class="auth-left-overlay"></div>
            <div class="auth-left-content">
                <div class="auth-welcome-title">Двухфакторная аутентификация</div>
                <div class="auth-welcome-desc">
                    Пожалуйста, введите код, отправленный на вашу почту, чтобы завершить вход.
                </div>
            </div>
        </div>
        <div class="auth-right">
            <div class="auth-form-block">
                <h2>Подтвердите вход</h2>
                <form method="post">
                    <div>
                        <label for="code">Код из письма</label>
                        <input name="code" id="code" type="text" placeholder="Введите код" autocomplete="one-time-code" />
                    </div>
                    <div class="form-action">
                        <button type="submit">Подтвердить</button>
                    </div>
                    <div class="form-link">
                        <a href="/Auth/Login">Вернуться к входу</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
